extends ../layout

block content
  .main
    .container
      .content
        each post in posts
          .post
            .top
              h2
                a(href=`/posts/${post.url}`) #{post.title}
                if post.owner.login === user.login
                  a(href=`/post/edit/${post.id}`).post-edit ✎
            .body
              p !{post.body}
            .bottom
              .author
                | Автор:
                a(href=`/users/${post.owner.login}`) #{post.owner.login}
              a(href=`/posts/${post.url}#${post.id}`)
                | Комментарии:
                | #{post.commentCount}
        .pagination
          if current > 2
            a(href=`/archive/${Number(current) - 1}`).new ← К новым
          if current === 2
            a(href='/').new ← На главную
          if pages > 0 && current < pages
            a(href=`/archive/${Number(current) + 1}`).old К старым →
        a(href='/post/add') Создать пост
      include ../sidebar